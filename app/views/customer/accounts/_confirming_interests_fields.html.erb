<%= f.fields_for 'interests[]', interest, index: index, checked: checked do |ff| %>
  <% if checked %>
    <%= markup(:li) do |m|
      # m << ff.check_box(:interest_id, { checked: checked }, interest.id, false)
      m << ff.label(:interest_id, interest.title)
      m << ff.hidden_field(:interest_id)
      m << ff.hidden_field(:checked, { value: checked })
    end %>
  <% else
     ff.hidden_field(:interest_id)
  end %>
<% end %>