<%= f.fields_for 'customer_interests[]', interest, index: index, cip: cip do |ff| %>
  <% if !interest.marked_for_destruction? %>
    <%= markup(:li) do |m|
      m << ff.label(:title, cip.title)
      m << ff.hidden_field(:checked, { value: '1' })
    end %>
  <% else
    ff.hidden_field(:checked, { value: '0' })
  end
end %>